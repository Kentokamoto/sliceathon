{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"proseWrap": "always",
	"htmlWhitespaceSensitivity": "css",
	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss"
	],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": [
				"*.js",
				"*.ts",
				"*.svelte"
			],
			"options": {
				"printWidth": 100,
				"proseWrap": "always",
			}
		}
	]
}